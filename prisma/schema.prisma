// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:app.db"
}

model Utilisateurs {
  id       Int    @id @default(autoincrement())
  nom      String
  prenom   String
  age      Int
  email    String
  number   Int
  password String
  echelon  Int
}

model Animateurs {
  id     Int    @id @default(autoincrement())
  nom    String
  prenom String
  age    Int
}

model Administration {
  id     Int    @id @default(autoincrement())
  nom    String
  prenom String
  age    Int
}

model Activite {
  id    Int    @id @default(autoincrement())
  nom   String
  photo String @default("basket.png")
}

model Professeures {
  id     Int    @id @default(autoincrement())
  nom    String
  prenom String
  age    Int
  salle  String
  cours  String
}
